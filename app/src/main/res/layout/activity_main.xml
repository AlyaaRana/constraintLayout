<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <TextView
        android:layout_width="300dp"
        android:layout_height="65dp"
        android:text="HASIL DATA"
        android:textStyle="bold"
        android:textSize="45dp"
        android:gravity="center"
        android:fontFamily="@font/monoglyceride"/>
    <TextView
        android:textSize="25dp"
        android:fontFamily="@font/regular"
        android:id="@+id/outputName"
        android:layout_width="400dp"
        android:layout_height="70dp"
        android:text="Nama : "/>
    <TextView
        android:textSize="25dp"
        android:fontFamily="@font/regular"
        android:id="@+id/outputAge"
        android:layout_width="400dp"
        android:layout_height="70dp"
        android:text="Umur : "/>
    <TextView
        android:textSize="25dp"
        android:fontFamily="@font/regular"
        android:id="@+id/outputComent"
        android:layout_width="400dp"
        android:layout_height="70dp"
        android:text="Comment : "/>
    <TextView
        android:fontFamily="@font/regular"
        android:text="'Thanks for u'r attention, have a nice day (^^)
don't forget me and i love u to the moon and go to back!!'"
        android:layout_width="400dp"
        android:layout_height="75dp"
        android:textSize="20dp"/>
</LinearLayout>