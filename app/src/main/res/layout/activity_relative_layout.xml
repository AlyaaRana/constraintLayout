<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rawrr"
    tools:context=".RelativeLayout">


    <ImageView
        android:layout_width="290dp"
        android:layout_height="250dp"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="1dp"
        android:src="@drawable/pp" />

    <TextView
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:textStyle="bold"
        android:layout_marginLeft="20dp"
        android:textSize="20dp"
        android:layout_marginTop="280dp"
        android:text="*Please,fill in the input data!!"/>


    <LinearLayout
        android:layout_width="480dp"
        android:layout_height="300dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="310dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/button_shape_black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/ic_baseline_person_24"/>

        <ImageView
            android:layout_width="70dp"
            android:layout_height="68dp"
            android:layout_marginLeft="-69dp"
            android:layout_marginTop="120dp"
            android:src="@drawable/ic_baseline_access_time_filled_24"/>

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="-67dp"
            android:layout_marginTop="210dp"
            android:src="@drawable/ic_baseline_edit_note_24"/>

        <EditText
            android:id="@+id/inputName"
            android:layout_width="250dp"
            android:layout_height="55dp"
            android:layout_marginTop="35dp"
            android:background="@drawable/button_type"
            android:hint="Input u'r name"
            android:textAlignment="center"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/inputAge"
            android:layout_width="250dp"
            android:layout_height="55dp"
            android:layout_marginLeft="-250dp"
            android:layout_marginTop="123dp"
            android:background="@drawable/button_type"
            android:hint="Input u'r age"
            android:textAlignment="center"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/inputComment"
            android:layout_marginTop="210dp"
            android:layout_marginLeft="-250dp"
            android:layout_width="250dp"
            android:layout_height="55dp"
            android:background="@drawable/button_type"
            android:hint="Let a comment please"
            android:textAlignment="center"
            android:textSize="20dp"/>


    </LinearLayout>
    <Button
        android:id="@+id/send"
        android:layout_marginTop="625dp"
        android:layout_marginLeft="130dp"
        android:layout_width="160dp"
        android:textStyle="bold"
        android:textSize="39dp"
        android:layout_height="60dp"
        android:text="Send" />


</RelativeLayout>